@model List<Category>


<div class="container" >

    <div class="row pt-4 pb-3" >
        <div class="col-6"> 
            <h2 class="text-primary"> Category List </h2>
        </div>
        <div class="col-6 text-end"> 
            <a asp-controller="Category" asp-action="CreateNewCategory" class="btn btn-secondary">
                <i class="bi bi-plus-circle"></i> Create New Category
            </a>
        </div>
    </div>


<table class="table table-bordered table-striped">
    
    <thead>

    <tr>
        <th>Category Name</th>
        <th>Display Order</th>
        <th></th>

    </tr>
    
    </thead>

    <tbody>

        @foreach(var obj in Model.OrderBy(u=>u.DisplayOrder))
        {
            <tr>
                <td class="align-content-center">@obj.Name</td>
                <td class="align-content-center">@obj.DisplayOrder</td>
                <td class="align-content-center">
                    <div class="w-75 btn-group" role="group">
                        <a class="btn btn-secondary" asp-controller="Category" asp-action="EditEntry" asp-route-id="@obj.Id">
                                <i class="bi bi-pencil-fill"></i> Edit
                        </a>
                        <a class="btn btn-delete mx-2 btn-danger" asp-controller="Category" asp-route-ob ="@obj.Id" asp-action="Delete">
                                <i class="bi bi-trash-fill"></i> Delete
                        </a>
                    </div>
                </td>
                

            </tr>
        }

    </tbody>


</table>

</div>

