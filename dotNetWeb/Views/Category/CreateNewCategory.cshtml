@model Category

<form method="post" >
    <div class="row p-1 mt-4">
        <h2 class="text-primary">Create Category</h2>
        <hr/>
    </div>

    <div class="mb-3 row p-1">
        <label class="p-0 text-primary">Name</label>
        <input asp-for="Name" class="form-control"/>
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="mb-3 row p-1">
        <label class="p-0 text-primary">Display Order</label>
        <input asp-for="DisplayOrder" class="form-control" />
        <span asp-validation-for="DisplayOrder" class="text-danger"></span>

    </div>

     <div class="row col-6">
        <div class="col-6 col-md-3" >
            <button type="submit" class="btn btn-secondary  form-control">Create</button>
        </div> 
        <div class="col-6 col-md-3" >
            <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control">
                Back to List
            </a>
        </div> 
     </div>
    <div class="row col-6">
        
    </div>


</form>


@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial"/>
    }
}